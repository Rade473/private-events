<p style="color: green"><%= notice %></p>

<%= render @event %>

<div>


  <%= link_to "Back to events", events_path %> <br><br>

  <% if user_signed_in?%>
    <%= link_to "Edit this event", edit_event_path(@event), class: "btn btn-outline-primary" %> <br>
    <%= button_to "Destroy this event", @event,class:"btn btn-outline-danger", method: :delete %>
    <%= link_to "Attend this event", attend_event_path%>
  <%end%>
</div>
